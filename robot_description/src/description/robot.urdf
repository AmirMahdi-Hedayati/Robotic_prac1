<?xml version="1.0"?>
<robot name="diff_drive_robot">

  <!-- base -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia
        ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1"/>
    </inertial>

    <!-- body -->
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.1"/>
      </geometry>
    </collision>
  </link>


  <!--left_wheel-->
  <link name="left_wheel_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01"/>
    </inertial>

 
    <visual>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>

      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>

      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
  </link>


  <!-- right_wheel-->
  <link name="right_wheel_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01"/>
    </inertial>

    <visual>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>

      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>

      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
  </link>


  <!--  lidar -->
  <link name="lidar_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia
        ixx="0.005" ixy="0.0" ixz="0.0"
        iyy="0.005" iyz="0.0"
        izz="0.005"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
  </link>


  <!--  Joints  -->

  <joint name="left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000.0" upper="1000.0" effort="10.0" velocity="10.0"/>
  </joint>

  <joint name="right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000.0" upper="1000.0" effort="10.0" velocity="10.0"/>
  </joint>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>

</robot>
